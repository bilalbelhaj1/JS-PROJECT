<body>
  <div class="auth-container">
    <div class="register-icon"><i class="fas fa-user-plus fa-2x"></i></div>
      <h1>Register</h1>
      <div class="error-displayer">
      </div>
      <form id="registerForm" action="#" method="POST">
        <label for="username">Username:</label>
        <input type="text" id="username" name="username" placeholder="Choose a username" autocomplete="off" />
    
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" placeholder="Enter your email"  autocomplete="off"/>
    
        <label for="password">Password:</label>
        <input type="password" id="password" name="password" placeholder="Create a password"  autocomplete="off" />
        <label for="role">Role</label>
      <select id="role" name="role">
        <option value="Teacher"> Teacher</option>
        <option value="Student"> Student</option>
      </select>
    
        <button type="submit" >Register</button>
      </form>
      <div class="switch-auth">
        Already have an account? <a href="/login">Login here</a>
      </div>
  </div>
  <script src="/js/register.js"></script> 
</body>
