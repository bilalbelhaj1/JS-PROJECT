<link rel="stylesheet" href="/css/style.css">
<link rel="stylesheet" href="/css/auth.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">

<div class="auth-container">
  <div class="register-icon"><i class="fas fa-user-plus fa-2x"></i></div>
  <h1>Inscription</h1>
  
  <div class="error-displayer"></div>
  
  <form id="registerForm" action="#" method="POST">
    <label for="fname">Prénom :</label>
    <input type="text" id="fname" name="fname" placeholder="Votre prénom" autocomplete="off" />

    <label for="lname">Nom :</label>
    <input type="text" id="lname" name="lname" placeholder="Votre nom" autocomplete="off" />

    <label for="email">Adresse e-mail :</label>
    <input type="email" id="email" name="email" placeholder="Entrez votre e-mail" autocomplete="off" />

    <label for="birthdate">Date de naissance :</label>
    <input type="date" id="birthdate" name="birthdate" autocomplete="off" />

    <label for="gender">Sexe :</label>
    <select id="gender" name="gender">
      <option value="female">Femme</option>
      <option value="male">Homme</option>
    </select>

    <label for="establishment">Établissement :</label>
    <input type="text" id="establishment" name="establishment" placeholder="Nom de l'établissement" autocomplete="off" />

    <label for="field">Filière :</label>
    <input type="text" id="field" name="field" placeholder="Votre filière" autocomplete="off" />

    <label for="role">Rôle :</label>
    <select id="role" name="role">
      <option value="Teacher">Enseignant</option>
      <option value="Student">Étudiant</option>
    </select>

    <label for="password">Mot de passe :</label>
    <input type="password" id="password" name="password" placeholder="Créez un mot de passe" autocomplete="off" />

    <button type="submit">S'inscrire</button>
  </form>

  <div class="switch-auth">
    Vous avez déjà un compte ? <a href="/login">Connectez-vous ici</a>
  </div>
</div>

<script src="/js/register.js"></script>
