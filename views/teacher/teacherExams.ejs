<div class="dashboard">
    <style>
.exams-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 20px;
    margin-top: 20px;
}

.exam-card {
    background-color: #ffffff;
    padding: 20px;
    border-radius: 16px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
    transition: transform 0.2s ease;
}
.exam-card h2{
    margin-bottom: 17px;
    text-align: center;
}
.exam-card p{
    margin-bottom: 10px;
}

.exam-card:hover {
    transform: translateY(-4px);
}

.exam-card .status {
    font-weight: bold;
    padding: 4px 10px;
    border-radius: 8px;
}

.status.active {
    color: #28a745;
    background-color: #e8f5e9;
}

.status.inactive {
    color: #dc3545;
    background-color: #fdecea;
}

.card-actions {
    margin-top: 21px;
    display: flex;
    gap: 10px;
}
.exam-link{
    width: 100%;
    display: flex;
    justify-content: space-between;
    gap: 5px;
}
.exam-link input{
    flex: 4;
    padding: 5px;
    border: none;
    border-radius: 6px;
    background: #c6c4c478;
    color: blue;
    font-size: 17px;
}
.exam-link button{
    flex: 1;
    border: none;
    border-radius: 8px;
    background: #65b778;
    font-size: 18px;
    font-weight: 500;
    width: 20px;
    color: #fff;
}

.btn {
    padding: 8px 12px;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    font-weight: bold;
    color: #fff;
    transition: background-color 0.3s ease;
}

.inactive-btn {
    background-color: #ffc107;
}
.activate-btn{
    background-color: #28a745;
}

.inactive-btn:hover {
    background-color: #e0a800;
}

.delete-btn {
    background-color: #dc3545;
}

.delete-btn:hover {
    background-color: #c82333;
}

    </style>
    <%- include('sidebar.ejs') %>
    <div class="main-content">
        <div class="topbar">
            <h3>My Exams</h3>
            <div class="user-profile">
                <img src="https://media.istockphoto.com/id/1345388323/vector/human-silhouette-isolated-vector-icon.jpg?s=612x612&w=0&k=20&c=a1wg9LYywdqDUG-t9rifrf16XEdWZbWe7ajuYxJTxEI=" alt="Teacher">
                <span>Prof. <%- user.username %></span>
            </div>
        </div>
        <div class="exams-container">
            <div class="no-exams-found" style="display: none;">

            </div>
        </div>
    </div> 
</div>
<script src="/js/teacher/teacherExams.js"></script>
