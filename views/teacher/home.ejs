<div class="dashboard">
    <%- include('sidebar.ejs') %>
    <div class="main-content">
        <div id="alert-message" class="alert" style="display: none;">
        <span id="alert-text"></span>
        <button id="alert-close" class="alert-close-btn">&times;</button>
        </div>
        <div class="topbar">
            <h3>Tableau de bord de l'enseignant</h3>
            <div class="user-profile">
                <img src="/img/<%- user.gender %>-<%- user.role %>.png" alt="Enseignant">
                <span>Prof. <%- user.Fname %> <%- user.Lname %></span>
            </div>
        </div>
        <div class="cards">
            <div class="card">
                <div class="card-header">
                    <h3>Examens actifs</h3>
                    <i class="fas fa-calendar-check"></i>
                </div>
                <p><%- examsStatistic.activeExams %></p>
            </div>
            <div class="card">
                <div class="card-header">
                    <h3>Nombre total d'examens créés</h3>
                    <i class="fas fa-pencil-alt"></i>
                </div>
                <p><%- examsStatistic.totalExams %></p>
            </div>
            <div class="card">
                <div class="card-header">
                    <h3>Questions créées</h3>
                    <i class="fas fa-question-circle"></i>
                </div>
                <p><%- examsStatistic.createdQuestions %></p>
            </div>
        </div>

        <div class="exam-form" id="exam-form-container">
            <h3 class="form-title">Créer un nouvel examen</h3>
            <form id="createExam-form">
                <div class="form-group">
                    <label for="exam-title">Titre de l'examen</label>
                    <input type="text" id="exam-title" class="form-control" placeholder="ex : Examen de JavaScript">
                </div>
                <div class="form-group">
                    <label for="exam-desc">Description</label>
                    <textarea id="exam-desc" class="form-control" rows="3" placeholder="Instructions de l'examen..."></textarea>
                </div>
                <div class="form-group">
                    <label for="exam-audience">Public cible</label>
                    <input type="text" id="exam-group" class="form-control" placeholder="ex : S4 Mip">
                </div>
                <button type="submit" class="btn btn-primary">Créer l'examen</button>
                <button class="close-btn" id="close-form">&times;</button>
            </form>
        </div>
    </div> 
</div>
<script src="/js/utils.js"></script>
<script src="/js/teacher/home.js"></script>
