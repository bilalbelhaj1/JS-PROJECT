<div class="dashboard">
    <link rel="stylesheet" href="/css/profile.css">
    <%- include('sidebar.ejs') %>
    <div class="container">
        <div id="alert-message" class="alert" style="display: none;"></div>
        <div class="profile-header">
            <h1>Profile Settings</h1>
        </div>
        <div id="alert-message" class="alert" style="display: none;"></div>

        <div class="profile-card">
            <h2>Profile Information</h2>
            
            <div class="profile-picture">
                <img src="/img/<%- user.gendre %>-<%- user.role %>.png" alt="Profile Picture" id="profile-img">
            </div>

            <form id="profile-form">
                <div class="form-group">
                    <label for="name">Username</label>
                    <input type="text" id="name" class="form-control" value="<%- user.username %>">
                </div>

                <div class="form-group">
                    <label for="email">Email Address</label>
                    <input type="email" id="email" class="form-control" value="<%- user.email %>">
                </div>
                <button type="submit" class="btn btn-primary">Save Changes</button>
            </form>
        </div>

        <div class="profile-card">
            <h2>Password Settings</h2>
            <p>Change your password here. Make sure it's strong and secure.</p>
            <button id="change-password-btn" class="btn btn-outline">Change Password</button>
        </div>
    </div>

    <div class="modal" id="password-modal">
        <div class="modal-content">
            <button class="close-btn" id="close-modal">&times;</button>
            <div class="modal-header">
                <h3>Change Password</h3>
            </div>
            <div class="modal-body">
                <form id="password-form">
                    <div class="form-group password-toggle">
                        <label for="current-password">Current Password</label>
                        <input type="password" id="current-password" class="form-control" required>
                    </div>

                    <div class="form-group password-toggle">
                        <label for="new-password">New Password</label>
                        <input type="password" id="new-password" class="form-control" required>
                    </div>

                    <div class="form-group password-toggle">
                        <label for="confirm-password">Confirm New Password</label>
                        <input type="password" id="confirm-password" class="form-control" required>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline" id="cancel-password">Cancel</button>
                        <button type="submit" class="btn btn-primary">Update Password</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="/js/utils.js"></script>
<script src="/js/profile.js"></script>